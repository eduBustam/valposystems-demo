<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.example.valposystemsdemo.mapper.UserMapper">

    <resultMap id="BaseResultMap" type="com.example.valposystemsdemo.model.UserModel">
        <result column="id" jdbcType="LONG" property="id"/>
        <result column="username" jdbcType="VARCHAR" property="username"/>
        <result column="email" jdbcType="VARCHAR" property="email"/>
    </resultMap>

    <select id="All" resultType="com.example.valposystemsdemo.model.UserModel">
        select * from user
    </select>

    <select id="Sel" resultType="com.example.valposystemsdemo.model.UserModel">
        select * from user where 1=1
        <if test="user.id != null">
            AND id = #{user.id}
        </if>
    </select>

    <insert id="Add" parameterType="com.example.valposystemsdemo.model.UserModel">
        INSERT INTO user
        <trim prefix="(" suffix=")" suffixOverrides=",">
            <if test="user.username != null">
                username,
            </if>
            <if test="user.email != null">
                email,
            </if>
        </trim>
        <trim prefix="VALUES (" suffix=")" suffixOverrides=",">
            <if test="user.username != null">
                #{user.username,jdbcType=VARCHAR},
            </if>
            <if test="user.email != null">
                #{user.email,jdbcType=VARCHAR},
            </if>
        </trim>
    </insert>

    <update id="Update" parameterType="com.example.valposystemsdemo.model.UserModel">
        UPDATE user
        <set>
            <if test="user.username != null">
                username = #{user.username},
            </if>
            <if test="user.email != null">
                email = #{user.email},
            </if>
        </set>
        WHERE
        id=#{user.id}
    </update>

    <delete id="Delete"  parameterType="com.example.valposystemsdemo.model.UserModel">
        DELETE FROM user WHERE id = #{user.id}
    </delete>

</mapper>